<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_place_images"
        android:layout_width="0dp"
        android:layout_height="@dimen/place_detail_pager_height"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Page Indicator, 전체보기 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_s_black_alpha_c_6_l_black_500"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="@id/vp_place_images"
        app:layout_constraintBottom_toBottomOf="@+id/vp_place_images"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            tools:text="1/10"/>

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_indicator"
            app:layout_constraintEnd_toStartOf="@+id/tv_viewer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 장소 이름 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black_900"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/vp_place_images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="영흥수목원" />

    <!-- 장소 주소 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@+id/tv_place_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="경기도 수원시 영통구 이의동 101 에듀하임" />

    <!-- 방문 날짜 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_visit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/purple"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2024년 10월 9일에 방문했어요!" />

    <!-- 노트 내용 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_note_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/black_800"
        app:layout_constraintTop_toBottomOf="@+id/tv_visit_date"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="안녕하세요, 슈가의 아유미입니다. \ndkssudkg 흇가그이그익" />

</androidx.constraintlayout.widget.ConstraintLayout>